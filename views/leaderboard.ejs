    <link rel="stylesheet" href="<%= vite('src/assets/styles/admin.css', '/design/admin.css') %>" />
    <style>
        :root {
            --muted: var(--text-muted);
            --light: var(--text);
            --dark: var(--secondary);
            --sidebar-width: 250px;
            --transition-speed: 0.3s;
            --radius-lg: 28px;
            --shadow: 0 25px 45px rgba(15, 20, 40, 0.12);
            --shadow-lg: 0 35px 60px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Cairo", sans-serif;
        }

        body {
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            direction: rtl;
        }

        .mobile-toggle {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1001;
            cursor: pointer;
            padding: 10px;
        }

        .mobile-toggle span {
            display: block;
            width: 25px;
            height: 3px;
            background: var(--accent);
            margin: 5px 0;
            transition: var(--transition-speed);
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: var(--panel-bg);
            backdrop-filter: blur(20px);
            padding: 20px;
            box-shadow: 5px 0 30px rgba(0, 0, 0, 0.3);
            transition: var(--transition-speed);
            z-index: 1000;
            border-right: 1px solid var(--border);
            overflow-y: auto;
            overflow-x: hidden;
            scrollbar-width: thin;
            scrollbar-color: var(--accent) rgba(255, 255, 255, 0.05);
        }

        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 10px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: linear-gradient(to bottom, var(--accent), #ffd700);
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(to bottom, #ffd700, var(--accent));
            box-shadow: 0 0 8px rgba(255, 204, 0, 0.3);
        }

        .sidebar-header {
            margin-bottom: 30px;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 15px;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .logo-container img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--accent);
        }

        .logo-text h1 {
            font-size: 18px;
            font-weight: 700;
            color: var(--accent);
            margin-bottom: 5px;
        }

        .logo-text p {
            font-size: 12px;
            color: #bdc3c7;
        }

        .nav-menu {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .nav-item {
            margin-bottom: 5px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            color: var(--light);
            text-decoration: none;
            border-radius: 8px;
            transition: all var(--transition-speed);
            font-weight: 600;
            cursor: pointer;
            position: relative;
            white-space: nowrap;
        }

        .nav-link i {
            width: 20px;
            text-align: center;
            font-size: 18px;
        }

        .toggle-icon {
            margin-right: auto;
            margin-left: 10px;
            font-size: 14px;
            transition: transform var(--transition-speed);
        }

        .nav-link:hover {
            background: linear-gradient(90deg, rgba(255, 204, 0, 0.15), rgba(255, 204, 0, 0.05));
            transform: translateX(-8px);
            color: var(--accent);
            border-right: 3px solid var(--accent);
            border-radius: 12px;
        }

        .nav-link.active {
            background: linear-gradient(90deg, var(--accent), #ffd700);
            color: var(--dark);
            box-shadow: 0 4px 20px rgba(255, 204, 0, 0.4);
            border-radius: 12px;
        }

        .nav-unread-badge {
            display: inline-flex;
            margin-inline-start: auto;
            margin-inline-end: 6px;
            min-width: 20px;
            height: 20px;
            border-radius: 999px;
            background: var(--danger);
            color: #fff !important;
            font-size: 0.75rem;
            font-weight: 800;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            line-height: 1;
            padding: 0 4px;
            visibility: visible;
        }

        .nav-unread-badge.empty {
            opacity: 0.5;
            background: rgba(231, 76, 60, 0.6);
        }

        .grades-nav-item {
            position: relative;
        }

        .grades-submenu-container {
            overflow: hidden;
            position: relative;
        }

        .grades-submenu {
            max-height: 0;
            overflow-y: auto;
            overflow-x: hidden;
            transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            margin-right: 20px;
            border-right: 2px solid var(--accent);
            margin-top: 5px;
            padding-right: 8px;
        }

        .grades-submenu::-webkit-scrollbar {
            width: 5px;
        }

        .grades-submenu::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
        }

        .grades-submenu::-webkit-scrollbar-thumb {
            background: var(--accent);
            border-radius: 10px;
        }

        .grades-submenu::-webkit-scrollbar-thumb:hover {
            background: #ffd700;
        }

        .grades-submenu-container::before,
        .grades-submenu-container::after {
            content: "";
            position: absolute;
            left: 0;
            right: 12px;
            height: 20px;
            pointer-events: none;
            z-index: 2;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .grades-submenu-container::before {
            top: 0;
            background: linear-gradient(to bottom, rgba(42, 27, 60, 0.95), transparent);
        }

        .grades-submenu-container::after {
            bottom: 0;
            background: linear-gradient(to top, rgba(42, 27, 60, 0.95), transparent);
        }

        .grades-toggle.active+.grades-submenu-container::before,
        .grades-toggle.active+.grades-submenu-container::after {
            opacity: 1;
        }

        .submenu-header {
            margin-bottom: 5px;
            position: relative;
        }

        .section-submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            margin-right: 20px;
            margin-top: 5px;
        }

        .submenu-link {
            padding: 12px 15px;
            font-size: 14px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 6px;
            margin-bottom: 3px;
            display: block;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: 1px solid transparent;
        }

        .submenu-link:hover {
            background: rgba(255, 204, 0, 0.15);
            transform: translateX(-5px);
            border-color: var(--accent);
            box-shadow: 0 4px 12px rgba(255, 204, 0, 0.2);
        }

        .submenu-link::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .submenu-link:hover::before {
            left: 100%;
        }

        .submenu-link i {
            font-size: 12px;
            color: var(--accent);
            transition: transform 0.3s ease;
        }

        .submenu-link:hover i {
            transform: translateX(-3px);
        }

        .grades-toggle.active,
        .section-toggle.active {
            background: rgba(255, 204, 0, 0.1);
            color: var(--accent);
        }

        .sidebar-footer {
            position: absolute;
            bottom: 20px;
            right: 20px;
            left: 20px;
        }

        .logout-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(90deg, #e74c3c, #c0392b);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all var(--transition-speed);
        }

        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(231, 76, 60, 0.4);
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 20px;
            min-height: 100vh;
        }

        .top-nav {
            background: var(--card-bg);
            padding: 14px 20px;
            border-radius: var(--radius-lg);
            margin-bottom: 30px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
        }

        .top-nav .user-info {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 12px;
            max-width: 100%;
        }

        .top-nav .user-info .logout-btn-mobile {
            order: 1;
            margin-right: auto;
        }

        .top-nav .user-avatar {
            width: 40px;
            height: 40px;
            min-width: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--accent);
            order: 3;
        }

        .top-nav .user-details {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            order: 2;
            margin-left: auto;
        }

        .top-nav .user-details h3 {
            font-size: 0.95rem;
            font-weight: 700;
            color: var(--text);
            margin: 0;
            max-width: 180px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .logout-btn-mobile {
            display: none;
            background: #e74c3c;
            color: white;
            border: none;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            font-size: 18px;
            cursor: pointer;
            transition: all var(--transition-speed);
        }

        .logout-btn-mobile:hover {
            background: #c0392b;
            transform: scale(1.1);
        }

        .leaderboard-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .leaderboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .leaderboard-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .export-btn {
            padding: 10px 14px;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.12);
            background: rgba(255, 255, 255, 0.06);
            color: var(--text);
            font-weight: 800;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all var(--transition-speed);
            white-space: nowrap;
            min-height: 44px;
        }

        .export-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 22px rgba(0, 0, 0, 0.28);
            border-color: rgba(255, 204, 0, 0.22);
            color: var(--accent);
        }

        .leaderboard-title {
            color: var(--accent);
            font-size: 2rem;
            text-shadow: 0 2px 10px rgba(255, 204, 0, 0.3);
            display: flex;
            align-items: center;
            gap: 15px;
        }


        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--panel-bg);
            border-radius: 20px;
            padding: 20px;
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

        .stat-card.primary {
            border-color: rgba(255, 204, 0, 0.3);
        }

        .stat-card.success {
            border-color: rgba(39, 174, 96, 0.3);
        }

        .stat-card.info {
            border-color: rgba(52, 152, 219, 0.3);
        }

        .stat-label {
            color: var(--muted);
            font-size: 0.9rem;
            margin-bottom: 6px;
        }

        .stat-value {
            color: var(--text);
            font-size: 2rem;
            font-weight: 800;
            line-height: 1;
        }

        .stat-meta {
            color: var(--muted);
            font-size: 0.85rem;
            margin-top: 8px;
        }

        .stat-chip {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 10px;
            border-radius: 999px;
            font-size: 0.8rem;
            font-weight: 700;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--accent);
            margin-top: 12px;
        }

        .filters {
            display: flex;
            gap: 20px;
            margin: 30px 0;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            background: rgba(255, 255, 255, 0.05);
            padding: 20px;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .filter-group label {
            color: var(--light);
            font-weight: 600;
            font-size: 14px;
        }

        .filter-select {
            padding: 10px 15px;
            background: rgba(64, 41, 88, 0.95) !important;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: var(--light) !important;
            font-size: 14px;
            min-width: 200px;
            cursor: pointer;
        }

        .filter-select:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 2px rgba(255, 204, 0, 0.2);
        }

        .refresh-btn {
            padding: 12px 22px;
            background: linear-gradient(90deg, var(--secondary), var(--primary));
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.12);
            margin-top: 35px;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 800;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all var(--transition-speed);
            white-space: nowrap;
            min-height: 44px;
        }

        .refresh-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 22px rgba(0, 0, 0, 0.28);
            border-color: rgba(255, 204, 0, 0.22);
        }

        .leaderboard-table-wrapper {
            background: var(--panel-bg);
            backdrop-filter: blur(4px);
            border-radius: 20px;
            padding: 30px;
            border: 1px solid var(--border);
            box-shadow: var(--shadow-lg);
            overflow-x: auto;
            margin-top: 20px;
        }

        .leaderboard-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            min-width: 800px;
        }

        .leaderboard-table thead {
            background: linear-gradient(135deg, rgba(255, 204, 0, 0.2), rgba(255, 204, 0, 0.1));
            border-bottom: 2px solid var(--accent);
        }

        .leaderboard-table th {
            padding: 18px 20px;
            text-align: right;
            font-weight: 700;
            font-size: 16px;
            color: var(--accent);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid rgba(255, 204, 0, 0.3);
        }

        .leaderboard-table th:first-child {
            text-align: center;
            width: 80px;
        }

        .leaderboard-table tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.15);
            background: rgba(255, 255, 255, 0.03);
        }

        .leaderboard-table tbody tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.05);
        }


        .leaderboard-table tbody tr:last-child {
            border-bottom: none;
        }

        .leaderboard-table td {
            padding: 18px 20px;
            text-align: right;
            color: var(--text);
            font-size: 15px;
            vertical-align: middle;
            border-right: 1px solid rgba(255, 255, 255, 0.2);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .leaderboard-table th {
            border-right: 1px solid rgba(255, 255, 255, 0.2);
        }


        .leaderboard-table td:nth-child(5),
        .leaderboard-table th:nth-child(5) {
            border-right: 1px solid rgba(255, 255, 255, 0.5);
        }

        .leaderboard-table td:first-child {
            text-align: center;
        }

        .rank-cell {
            font-size: 24px;
            font-weight: 800;
            color: var(--accent);
            text-shadow: 0 2px 8px rgba(255, 204, 0, 0.3);
        }

        .rank-cell.rank-1 {
            color: #ffd700;
            font-size: 28px;
        }

        .rank-cell.rank-2 {
            color: #c0c0c0;
            font-size: 26px;
        }

        .rank-cell.rank-3 {
            color: #cd7f32;
            font-size: 26px;
        }

        .user-name-cell {
            font-weight: 700;
            font-size: 16px;
            color: var(--light);
        }

        .username-cell {
            font-size: 13px;
            color: var(--muted);
            margin-top: 4px;
        }

        .grade-cell {
            display: inline-block;
            padding: 6px 14px;
            background: rgba(52, 152, 219, 0.2);
            color: #3498db;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
        }

        .score-cell {
            font-size: 20px;
            font-weight: 800;
            color: var(--accent);
        }

        .time-cell {
            font-size: 13px;
            color: var(--muted);
        }

        .podium-row {
            background: linear-gradient(135deg, rgba(255, 204, 0, 0.15), rgba(255, 204, 0, 0.05)) !important;
        }


        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            border: 2px dashed rgba(255, 255, 255, 0.1);
        }

        .empty-state i {
            font-size: 64px;
            color: var(--accent);
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state h3 {
            font-size: 24px;
            color: var(--light);
            margin-bottom: 10px;
        }

        .empty-state p {
            color: var(--muted);
            font-size: 16px;
        }

        .loading-state {
            text-align: center;
            padding: 60px 20px;
        }

        .loading-state i {
            font-size: 48px;
            color: var(--accent);
            margin-bottom: 20px;
        }

        .loading-state p {
            color: var(--light);
            font-size: 18px;
        }

        @media (max-width: 992px) {
            .mobile-toggle {
                display: block;
            }

            .sidebar {
                transform: translateX(-100%);
                overflow-y: auto;
                overflow-x: hidden;
                padding: 15px;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 80px 15px 20px;
            }

            .logout-btn {
                display: none;
            }

            .logout-btn-mobile {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .leaderboard-table-wrapper {
                padding: 15px;
                overflow-x: auto;
            }

            .leaderboard-table {
                min-width: 600px;
            }

            .leaderboard-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .filters {
                flex-direction: column;
                align-items: stretch;
            }

            .filter-select {
                min-width: auto;
                width: 100%;
            }
        }

        @media (max-width: 768px) {
            .leaderboard-title {
                font-size: 1.5rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 480px) {

            .leaderboard-table th,
            .leaderboard-table td {
                padding: 12px 8px;
                font-size: 13px;
            }

            .rank-cell {
                font-size: 20px;
            }

            .user-name-cell {
                font-size: 14px;
            }
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-10px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        ::-webkit-scrollbar {
            width: 8px;
