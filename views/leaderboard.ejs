        const I18N = {
            ar: {
                export_excel: "تنزيل Excel",
                export_png: "تنزيل صورة",
                export_title: "لوحة الترتيب",
                export_error: "تعذر إنشاء ملف التحميل",
            },
            en: {
                export_excel: "Download Excel",
                export_png: "Download Image",
                export_title: "Leaderboard",
                export_error: "Failed to create download",
            },
        };

        function getLang() {
            const raw = (localStorage.getItem("lang") || "ar").toLowerCase();
            return raw === "en" ? "en" : "ar";
        }

        function t(key) {
            const lang = getLang();
            return (I18N[lang] && I18N[lang][key]) || (I18N.ar && I18N.ar[key]) || key;
        }

        function applyI18n() {
            const lang = getLang();
            document.documentElement.setAttribute("lang", lang);
            document.documentElement.setAttribute("dir", lang === "ar" ? "rtl" : "ltr");
            document.querySelectorAll("[data-i18n]").forEach((el) => {
                const key = el.getAttribute("data-i18n");
                if (!key) return;
                el.textContent = t(key);
            });
        }

        function buildExportFileBaseName() {
            const topic = "<%= (typeof form !== 'undefined' && form && form.topic) ? String(form.topic).replace(/\s+/g, ' ').trim() : '' %>";
            const safeTopic = (topic || "").replace(/[^\w\u0600-\u06FF\s-]/g, "").trim();
            const base = safeTopic ? `${t("export_title")} - ${safeTopic}` : t("export_title");
            return base.replace(/\s+/g, " ").trim();
        }

        function downloadBlob(blob, filename) {
            const url = URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            a.remove();
            URL.revokeObjectURL(url);
        }

        function getVisibleTableForExport() {
            const table = document.getElementById("leaderboardTable");
            if (!table) return null;
            const clone = table.cloneNode(true);
            Array.from(clone.querySelectorAll("tbody tr")).forEach((tr) => {
                const orig = table.querySelector(`tbody tr[data-username="${tr.getAttribute("data-username")}"]`);
                if (orig && orig.style && orig.style.display === "none") {
                    tr.remove();
                }
            });
            return clone;
        }

        async function exportExcel() {
            const table = getVisibleTableForExport();
            if (!table || typeof XLSX === "undefined") return;
            const wb = XLSX.utils.table_to_book(table, { sheet: "Leaderboard" });
            const sheetName = wb.SheetNames && wb.SheetNames[0];
            const ws = sheetName ? wb.Sheets[sheetName] : null;
            if (ws && ws["!ref"]) {
                const range = XLSX.utils.decode_range(ws["!ref"]);
                const colWidths = [];
                for (let C = range.s.c; C <= range.e.c; C++) {
                    let maxLen = 10;
                    for (let R = range.s.r; R <= range.e.r; R++) {
                        const cellAddress = XLSX.utils.encode_cell({ r: R, c: C });
                        const cell = ws[cellAddress];
                        if (!cell) continue;
                        const v = cell.w || cell.v;
                        const text = (v === undefined || v === null) ? "" : String(v);
                        maxLen = Math.max(maxLen, text.length + 2);
                    }
                    colWidths.push({ wch: Math.min(60, maxLen) });
                }
                ws["!cols"] = colWidths;
            }
            const fileBase = buildExportFileBaseName();
            XLSX.writeFile(wb, `${fileBase}.xlsx`);
        }

        async function exportPng() {
            const wrapper = document.querySelector(".leaderboard-table-wrapper");
            if (!wrapper || typeof html2canvas === "undefined") return;

            if (document.fonts && document.fonts.ready) {
                try { await document.fonts.ready; } catch (e) { }
            }

            const captureWidth = Math.max(wrapper.scrollWidth || 0, wrapper.offsetWidth || 0, 1);
            const captureHeight = Math.max(wrapper.scrollHeight || 0, wrapper.offsetHeight || 0, 1);

            const canvas = await html2canvas(wrapper, {
                backgroundColor: "#2a1b3c",
                scale: 3,
                useCORS: true,
                foreignObjectRendering: true,
                width: captureWidth,
                height: captureHeight,
                windowWidth: captureWidth,
                windowHeight: captureHeight,
                onclone: function (clonedDoc) {
                    try {
                        clonedDoc.documentElement.setAttribute("dir", "rtl");
                        clonedDoc.documentElement.setAttribute("lang", "ar");
                        const style = clonedDoc.createElement("style");
                        style.textContent = `
                            * { font-family: 'Cairo', system-ui, -apple-system, 'Segoe UI', sans-serif !important; }
                            body { direction: rtl !important; }
                            table { direction: rtl !important; }
                        `;
                        clonedDoc.head.appendChild(style);
                    } catch (e) { }
                },
            });

            const blob = await new Promise((resolve) => canvas.toBlob(resolve, "image/png"));
            if (!blob) return;
            const fileBase = buildExportFileBaseName();
            downloadBlob(blob, `${fileBase}.png`);
        }

        function bindExportButtons() {
            if (exportExcelBtn) exportExcelBtn.addEventListener("click", () => exportExcel().catch(() => { }));
            if (exportPngBtn) exportPngBtn.addEventListener("click", () => exportPng().catch(() => { }));
        }

        (function () {
            function updatePendingBadges() {
                if (document.visibilityState !== "visible") return;
                fetch("/api/admin/pending-counts")
                    .then(function (r) { return r.json(); })
                    .then(function (d) {
                        var loginBadge = document.getElementById("nav-badge-login");
                        var giftBadge = document.getElementById("nav-badge-gift");
                        var loginCount = d.pendingRegistration || 0;
                        var giftCount = d.pendingGift || 0;
                        if (loginBadge) {
                            loginBadge.textContent = loginCount;
                            loginBadge.classList.toggle("empty", loginCount === 0);
                            loginBadge.setAttribute("aria-hidden", loginCount === 0 ? "true" : "false");
                        }
                        if (giftBadge) {
                            giftBadge.textContent = giftCount;
                            giftBadge.classList.toggle("empty", giftCount === 0);
                            giftBadge.setAttribute("aria-hidden", giftCount === 0 ? "true" : "false");
                        }
                    })
                    .catch(function () { });
            }
            updatePendingBadges();
            setInterval(updatePendingBadges, 10000);
            document.addEventListener("visibilitychange", function () {
                if (document.visibilityState === "visible") updatePendingBadges();
            });
        })();

        function toggleSidebar() {
            if (sidebar && mobileToggle) {
                sidebar.classList.toggle("active");
                const spans = mobileToggle.querySelectorAll("span");
                if (sidebar.classList.contains("active")) {
                    spans[0].style.transform = "rotate(45deg) translate(5px, 5px)";
                    spans[1].style.opacity = "0";
                    spans[2].style.transform = "rotate(-45deg) translate(7px, -6px)";
                } else {
                    spans[0].style.transform = "none";
                    spans[1].style.opacity = "1";
                    spans[2].style.transform = "none";
                }
            }
        }

        if (mobileToggle) {
            mobileToggle.addEventListener("click", toggleSidebar);
        }

        if (gradesToggle) {
            gradesToggle.addEventListener("click", function (e) {
                e.stopPropagation();
                this.classList.toggle("active");
                const icon = this.querySelector(".toggle-icon");
                if (this.classList.contains("active")) {
                    icon.classList.remove("fa-chevron-down");
                    icon.classList.add("fa-chevron-up");
                    gradesSubmenu.style.maxHeight = Math.min(gradesSubmenu.scrollHeight, 400) + "px";
                } else {
                    icon.classList.remove("fa-chevron-up");
                    icon.classList.add("fa-chevron-down");
                    gradesSubmenu.style.maxHeight = "0";
                    document.querySelectorAll(".section-toggle.active").forEach((toggle) => {
                        toggle.classList.remove("active");
                        const subIcon = toggle.querySelector(".toggle-icon");
                        subIcon.classList.remove("fa-chevron-up");
                        subIcon.classList.add("fa-chevron-down");
                        const sectionSub = document.querySelector('.section-submenu[data-section="' + toggle.dataset.section + '"]');
                        if (sectionSub) sectionSub.style.maxHeight = "0";
                    });
                }
            });
        }

        sectionToggles.forEach((toggle) => {
            toggle.addEventListener("click", function (e) {
                e.stopPropagation();
                this.classList.toggle("active");
                const icon = this.querySelector(".toggle-icon");
                const sectionSub = document.querySelector('.section-submenu[data-section="' + this.dataset.section + '"]');

                if (this.classList.contains("active")) {
                    icon.classList.remove("fa-chevron-down");
                    icon.classList.add("fa-chevron-up");
                    sectionSub.style.maxHeight = sectionSub.scrollHeight + "px";
                } else {
                    icon.classList.remove("fa-chevron-up");
                    icon.classList.add("fa-chevron-down");
                    sectionSub.style.maxHeight = "0";
                }
            });
        });

        async function performLogout() {
            const result = await Swal.fire({
                title: "تسجيل الخروج",
                text: "هل تريد فعلاً تسجيل الخروج من النظام؟",
                icon: "question",
                iconColor: "#ffcc00",
                showCancelButton: true,
                confirmButtonText: "نعم، تسجيل خروج",
                cancelButtonText: "إلغاء",
                confirmButtonColor: "#e74c3c",
                cancelButtonColor: "#666",
                background: "#2a1b3c",
                color: "#fff",
                backdrop: "rgba(0,0,0,0.8)",
                allowOutsideClick: false,
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch("/logout", { method: "POST" });
                    if (response.ok) {
                        await Swal.fire({
                            title: "تم تسجيل الخروج",
                            text: "وداعاً! تم تسجيل خروجك بنجاح",
                            icon: "success",
                            iconColor: "#27ae60",
                            background: "#2a1b3c",
                            color: "#fff",
                            backdrop: "rgba(0,0,0,0.8)",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                        setTimeout(() => {
                            window.location.href = "/login";
                        }, 500);
                    }
                } catch (error) {
                    console.error("Logout error:", error);
                    window.location.href = "/login";
                }
            }
        }

        if (logoutBtn) {
            logoutBtn.addEventListener("click", performLogout);
        }
        if (logoutBtnMobile) {
            logoutBtnMobile.addEventListener("click", performLogout);
        }

        document.addEventListener("click", function (event) {
            if (window.innerWidth <= 992 && sidebar && mobileToggle) {
                if (!sidebar.contains(event.target) && !mobileToggle.contains(event.target)) {
                    sidebar.classList.remove("active");
                    const spans = mobileToggle.querySelectorAll("span");
                    spans[0].style.transform = "none";
                    spans[1].style.opacity = "1";
                    spans[2].style.transform = "none";
                }
            }
        });

        const usernameDisplay = document.getElementById("username-display");
        const userRolePill = document.getElementById("user-role-pill");

        function recalculateRanks() {
            const rows = Array.from(document.querySelectorAll(".leaderboard-row"));
            if (!rows.length) return;
            rows.sort((a, b) => {
                const scoreA = Number(a.dataset.score || 0);
                const scoreB = Number(b.dataset.score || 0);
                if (scoreB !== scoreA) return scoreB - scoreA;

                const timeA = new Date(a.dataset.time || 0);
                const timeB = new Date(b.dataset.time || 0);
                return timeA - timeB;
            });

            if (leaderboardList) {
                rows.forEach(row => leaderboardList.appendChild(row));
            }

            let lastScore = null;
            let currentRank = 0;

            rows.forEach((row, index) => {
                const score = Number(row.dataset.score || 0);
                if (lastScore === null) {
                    currentRank = 1;
                } else if (score !== lastScore) {
                    currentRank = index + 1;
                }
                lastScore = score;

                row.dataset.rank = String(currentRank);

                const rankCell = row.querySelector(".rank-cell");
                if (rankCell) {
                    rankCell.textContent = String(currentRank);
                    rankCell.classList.remove("rank-1", "rank-2", "rank-3");
                    if (currentRank === 1) rankCell.classList.add("rank-1");
                    else if (currentRank === 2) rankCell.classList.add("rank-2");
                    else if (currentRank === 3) rankCell.classList.add("rank-3");
                }

                if (currentRank <= 3) {
                    row.classList.add("podium-row");
                } else {
                    row.classList.remove("podium-row");
                }
            });
        }

        async function hydrateUser() {
            try {
                const res = await fetch("/api/user-info", { credentials: "include" });
                const data = await res.json();
                if (!data.isAuthenticated) {
                    window.location.href = "/login";
                    return;
                }
                if (usernameDisplay) usernameDisplay.textContent = data.username;
                if (userRolePill) {
                    userRolePill.textContent = data.role === "leadadmin" ? "ليد أدمن" : data.role === "admin" ? "أدمن" : data.role;
                }

                document.querySelectorAll("[data-nav-access]").forEach(function (el) {
                    var key = el.getAttribute("data-nav-access");
                    el.style.display = data && key && data[key] ? "" : "none";
                });
            } catch (error) {
                console.error("Failed to hydrate user info:", error);
                if (typeof showNotification === "function") {
                    showNotification("error", "تعذر تحميل البيانات", "يرجى إعادة تسجيل الدخول.");
                }
            }
        }


        function filterLeaderboard() {
            if (!filterGrade) return;

            const gradeFilter = filterGrade.value;
            const rows = document.querySelectorAll(".leaderboard-row");

            let visibleRows = Array.from(rows);

            if (gradeFilter !== "all") {
                visibleRows = visibleRows.filter(row => {
                    const grade = row.dataset.grade;
                    return grade === gradeFilter;
                });
            }

            rows.forEach(row => row.style.display = "none");

            if (visibleRows.length === 0) {
                if (leaderboardTable) {
                    leaderboardTable.style.display = "none";
                }
                const wrapper = document.querySelector(".leaderboard-table-wrapper");
                if (wrapper) {
                    const existingEmpty = wrapper.querySelector(".empty-state");
                    if (!existingEmpty) {
                        const emptyState = document.createElement("div");
                        emptyState.className = "empty-state";
                        emptyState.innerHTML = `
                            <i class="fas fa-search"></i>
                            <h3>لا توجد نتائج</h3>
                            <p>لا توجد نتائج تطابق معايير التصفية المحددة</p>
                        `;
                        wrapper.appendChild(emptyState);
                    }
                }
                return;
            }

            const wrapper = document.querySelector(".leaderboard-table-wrapper");
            if (wrapper) {
                const emptyState = wrapper.querySelector(".empty-state");
                if (emptyState) {
                    emptyState.remove();
                }
            }

            if (leaderboardTable) {
                leaderboardTable.style.display = "table";
            }
            visibleRows.forEach(row => row.style.display = "table-row");
        }

        if (filterGrade) filterGrade.addEventListener("change", filterLeaderboard);
        if (refreshBtn) {
            refreshBtn.addEventListener("click", function () {
                this.disabled = true;
                this.innerHTML = '<span class="loading-dots" aria-hidden="true"><span></span><span></span><span></span></span><span style="margin-right:8px">جاري التحديث...</span>';
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            });
        }

        document.addEventListener("DOMContentLoaded", () => {
            applyI18n();
            hydrateUser();
            recalculateRanks();
            bindExportButtons();
        });

        const suggestionsToggle = document.getElementById("suggestionsToggle");
        const suggestionsSubmenu = document.getElementById("suggestionsSubmenu");

        if (suggestionsToggle) {
            suggestionsToggle.addEventListener("click", function (e) {
                e.stopPropagation();
                this.classList.toggle("active");
                const icon = this.querySelector(".toggle-icon");
                if (this.classList.contains("active")) {
                    icon.classList.remove("fa-chevron-down");
                    icon.classList.add("fa-chevron-up");
                    suggestionsSubmenu.style.maxHeight = suggestionsSubmenu.scrollHeight + "px";
                } else {
                    icon.classList.remove("fa-chevron-up");
                    icon.classList.add("fa-chevron-down");
                    suggestionsSubmenu.style.maxHeight = "0";
                }
            });
        }

        document.addEventListener("click", function (e) {
            if (!e.target.closest(".suggestions-nav-item")) {
                const suggestionsToggle = document.getElementById("suggestionsToggle");
                const suggestionsSubmenu = document.getElementById("suggestionsSubmenu");

                if (suggestionsToggle && suggestionsToggle.classList.contains("active")) {
                    suggestionsToggle.classList.remove("active");
                    const icon = suggestionsToggle.querySelector(".toggle-icon");
                    icon.classList.remove("fa-chevron-up");
                    icon.classList.add("fa-chevron-down");
                    suggestionsSubmenu.style.maxHeight = "0";
                }
            }
        });
    </script>
