                <div class="mobile-suggestion-menu" id="mobileSuggestionMenu">
                    <a href="/grades/<%= gradeSlug %>/suggestion/ektm3at" id="mobileSuggestionLink">
                        <i class="fas fa-hand-point-up"></i>
                        اقتراح الاجتماع
                    </a>
                </div>

                <a href="/gift-shop" class="nav-button gift" data-page="gift-shop">
                    <i class="fas fa-gift"></i>
                    متجر الهدايا
                </a>
                <button class="nav-button logout-btn-mobile-dropdown" id="logoutBtnMobile">
