</head>

<body>
  <nav class="main-nav">
    <div class="nav-brand">
      <div class="brand-text">
        <h2>كاتدرائية السمائيين</h2>
        <p>منصة النماذج</p>
      </div>
    </div>

    <div class="nav-center">
      <a href="/gift-shop" class="points-badge nav-points-always">
        <i class="fas fa-coins"></i>
        <span id="pointsValue">0</span>
      </a>
      <div class="nav-buttons">
        <a href="/" class="nav-button" id="gradePageLink" data-page="dashboard">
          <i class="fas fa-home"></i>
          صفحة الصف
        </a>
        <div class="suggestion-container">
          <button class="suggestion-button" id="suggestionBtn">
            <i class="fas fa-lightbulb"></i>
            اقتراحات
            <i class="fas fa-chevron-down arrow-icon" id="desktopArrow"></i>
          </button>
          <div class="suggestion-dropdown" id="suggestionDropdown">
            <a href="#" id="suggestionLink">
              <i class="fas fa-hand-point-up"></i>
              اقتراح الاجتماع
            </a>
          </div>
        </div>

        <a href="/gift-shop" class="nav-button">
          <i class="fas fa-gift"></i>
          متجر الهدايا
        </a>

        <button class="logout-btn" id="logoutBtn">
          <i class="fas fa-sign-out-alt"></i>
          تسجيل الخروج
        </button>
      </div>
    </div>

    <div class="mobile-header-right">
      <div class="mobile-menu-btn" id="mobileMenuBtn">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div class="mobile-dropdown" id="mobileDropdown">
      <div class="mobile-buttons">
        <a href="/" class="nav-button" id="mobileGradeLink" data-page="dashboard">
          <i class="fas fa-home"></i>
          صفحة الصف
        </a>

        <button class="nav-button" id="mobileSuggestionBtn">
          <i class="fas fa-lightbulb"></i>
          اقتراحات
          <i class="fas fa-chevron-down arrow-icon" id="mobileArrow"></i>
        </button>

        <div class="mobile-suggestion-menu" id="mobileSuggestionMenu">
          <a href="#" id="mobileSuggestionLink">
            <i class="fas fa-hand-point-up"></i>
            اقتراح الاجتماع
          </a>
        </div>

        <a href="/gift-shop" class="nav-button">
          <i class="fas fa-gift"></i>
          متجر الهدايا
        </a>

        <button class="nav-button logout-btn-mobile-dropdown" id="logoutBtnMobile">
          <i class="fas fa-sign-out-alt"></i>
          تسجيل الخروج
        </button>
      </div>
    </div>
  </nav>

  <main class="main-content">
    <div class="form-shell">
      <header class="form-hero">
        <div>
          <h1>
            <%= form.topic %>
          </h1>
          <p class="subtitle">
            <%= form.description || '' %>
          </p>
          <div class="chips">
            <span class="chip">
              <%= form.expiry ? 'متاح حتى ' + new Date(form.expiry).toLocaleString('ar-EG') : 'بدون موعد إغلاق' %>
            </span>
          </div>
        </div>
      </header>

      <main class="form-layout">
        <form id="solve-form" class="form-body">
          <% form.questions.forEach((question, index)=> { %> <% const questionPoints=(typeof question.points==='number'
              ) ? question.points : 10; %>
              <% const isOptional=question.required===false || questionPoints===0; %>
                <section class="question" data-question-index="<%= index %>">
                  <div class="question-head">
                    <span class="badge">سؤال <%= index + 1 %></span>
                    <% if (!isOptional) { %>
                      <span class="required">إلزامي</span>
                      <% } %>
                        <% if (questionPoints> 0) { %>
                          <span class="points-badge">
                            <%= questionPoints %> نقطة
                          </span>
                          <% } %>
                  </div>
                  <h2>
                    <%= question.questionText %>
                  </h2>
                  <div class="question-options">
                    <% if (question.questionType==="true-false" ) { %>
                      <label class="option">
                        <input type="radio" name="q<%= index %>" value="True" <%=isOptional ? '' : 'required' %>>
                        <span>صحيح</span>
                      </label>
                      <label class="option">
                        <input type="radio" name="q<%= index %>" value="False" <%=isOptional ? '' : 'required' %>>
                        <span>خطأ</span>
                      </label>
                      <% } else { %>
                        <% question.options.forEach((option)=> { %>
                          <label class="option">
                            <input type="radio" name="q<%= index %>" value="<%= option %>" <%=isOptional ? ''
                              : 'required' %>>
                            <span>
                              <%= option %>
                            </span>
                          </label>
                          <% }); %>
                            <% } %>
                  </div>
                </section>
                <% }); %>
                  <button class="submit-btn" type="submit">إرسال الإجابات</button>
        </form>

        <aside class="form-aside">
          <div class="tips-card">
            <h3>إرشادات سريعة</h3>
            <ul>
              <li>الإجابات مرتبطة بحسابك لا داعي لكتابة الاسم.</li>
              <li>يمكن إرسال النموذج مرة واحدة فقط.</li>
              <li>اضغط على زر الإرسال وانتظر رسالة التأكيد.</li>
            </ul>
          </div>
        </aside>
      </main>
    </div>

    <footer>
      <p>&copy; 2026 كاتدرائية السمائيين. جميع الحقوق محفوظة.</p>
    </footer>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js" defer></script>
  <script src="/scripts/notifications.js" defer></script>
  <script>
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileDropdown = document.getElementById('mobileDropdown');
    const suggestionBtn = document.getElementById('suggestionBtn');
    const suggestionDropdown = document.getElementById('suggestionDropdown');
    const mobileSuggestionBtn = document.getElementById('mobileSuggestionBtn');
    const mobileSuggestionMenu = document.getElementById('mobileSuggestionMenu');
    const logoutBtn = document.getElementById('logoutBtn');
    const logoutBtnMobile = document.getElementById('logoutBtnMobile');
    const mobileLogoutBtn = document.getElementById('mobileLogoutBtn');
    const desktopArrow = document.getElementById('desktopArrow');
    const mobileArrow = document.getElementById('mobileArrow');

    mobileMenuBtn.addEventListener('click', function (e) {
      e.stopPropagation();
      const isOpen = mobileDropdown.classList.toggle('active');
      mobileMenuBtn.classList.toggle('open', isOpen);
    });

    if (suggestionBtn) {
      suggestionBtn.addEventListener('click', function (e) {
        e.stopPropagation();
        suggestionDropdown.classList.toggle('active');
        if (desktopArrow) {
          desktopArrow.classList.toggle('rotated');
        }
      });
    }

    if (mobileSuggestionBtn) {
      mobileSuggestionBtn.addEventListener('click', function (e) {
        e.stopPropagation();
        mobileSuggestionMenu.classList.toggle('active');
        if (mobileArrow) {
          mobileArrow.classList.toggle('rotated');
        }
      });
    }

    function closeAllDropdowns() {
      if (suggestionDropdown) suggestionDropdown.classList.remove('active');
      if (mobileDropdown) mobileDropdown.classList.remove('active');
      if (mobileSuggestionMenu) mobileSuggestionMenu.classList.remove('active');
      if (desktopArrow) desktopArrow.classList.remove('rotated');
      if (mobileArrow) mobileArrow.classList.remove('rotated');
      mobileMenuBtn.classList.remove('open');
    }

    document.addEventListener('click', function (event) {
      if (suggestionBtn && suggestionDropdown && !suggestionBtn.contains(event.target) && !suggestionDropdown.contains(event.target)) {
        suggestionDropdown.classList.remove('active');
        if (desktopArrow) {
          desktopArrow.classList.remove('rotated');
        }
      }

      if (mobileMenuBtn && !mobileMenuBtn.contains(event.target) && !mobileDropdown.contains(event.target)) {
        closeAllDropdowns();
      }
    });

    async function performLogout() {
      const result = await Swal.fire({
        title: 'تسجيل الخروج',
        text: 'هل تريد فعلاً تسجيل الخروج من النظام؟',
        icon: 'question',
        iconColor: '#ffcc00',
        showCancelButton: true,
        confirmButtonText: 'نعم، تسجيل خروج',
        cancelButtonText: 'إلغاء',
        confirmButtonColor: '#e74c3c',
        cancelButtonColor: '#666',
        background: '#2a1b3c',
        color: '#fff',
        backdrop: 'rgba(0,0,0,0.8)',
        allowOutsideClick: false
      });

      if (result.isConfirmed) {
        try {
          const response = await fetch("/logout", { method: "POST" });
          if (response.ok) {
            await Swal.fire({
              title: 'تم تسجيل الخروج',
              text: 'وداعاً! تم تسجيل خروجك بنجاح',
              icon: 'success',
              iconColor: '#27ae60',
              background: '#2a1b3c',
              color: '#fff',
              backdrop: 'rgba(0,0,0,0.8)',
              showConfirmButton: false,
              timer: 1500
            });
            setTimeout(() => {
              window.location.href = "/";
            }, 500);
          }
        } catch (error) {
          console.error('Logout error:', error);
          window.location.href = "/";
        }
      }
    }

    if (logoutBtn) {
      logoutBtn.addEventListener('click', performLogout);
    }

    if (logoutBtnMobile) {
      logoutBtnMobile.addEventListener('click', performLogout);
    }

    if (mobileLogoutBtn) {
      mobileLogoutBtn.addEventListener('click', performLogout);
    }

    async function loadUserPoints() {
      try {
        const response = await fetch('/api/gift-shop/my-points');
        if (response.ok) {
          const data = await response.json();
          const points = data.points || 0;
          const pointsValueEl = document.getElementById('pointsValue');
          if (pointsValueEl) {
            pointsValueEl.textContent = points;
          }
        }
      } catch (error) {
        console.error('Error loading points:', error);
      }
    }

    let userGrade = null;

    function resolveUserGrade(data) {
      if (!data) {
        return null;
      }
      if (typeof data.grade === 'string' && data.grade.trim()) {
        return data.grade.trim();
      }
      if (Array.isArray(data.gradeAccess) && data.gradeAccess.length > 0) {
        const candidate = data.gradeAccess.find(value => typeof value === 'string' && value.trim());
        if (candidate) {
          return candidate.trim();
        }
      }
      if (typeof data.landing === 'string') {
        const match = data.landing.match(/\/grades\/([^/]+)/);
        if (match) {
          return match[1];
        }
      }
      return null;
    }

    async function updateNavigationLinks() {
      try {
        const response = await fetch("/api/user-info");
        if (!response.ok) {
          return;
        }
        const data = await response.json();
        if (!data.isAuthenticated) {
          return;
        }
        const grade = resolveUserGrade(data);
        if (!grade) {
          return;
        }
        userGrade = grade;
        const gradePageLink = document.getElementById('gradePageLink');
        const mobileGradeLink = document.getElementById('mobileGradeLink');
        if (gradePageLink) {
          gradePageLink.href = `/grades/${grade}`;
        }
        if (mobileGradeLink) {
          mobileGradeLink.href = `/grades/${grade}`;
        }
        const suggestionLink = document.getElementById('suggestionLink');
        const mobileSuggestionLink = document.getElementById('mobileSuggestionLink');
        if (suggestionLink) {
          suggestionLink.href = `/grades/${grade}/suggestion/ektm3at`;
        }
        if (mobileSuggestionLink) {
          mobileSuggestionLink.href = `/grades/${grade}/suggestion/ektm3at`;
        }
      } catch (error) {
        console.error('Error loading user info:', error);
      }
    }

    document.addEventListener('DOMContentLoaded', function () {
      loadUserPoints();
      updateNavigationLinks();
    });

    const solveForm = document.getElementById('solve-form');
    const submitBtn = document.querySelector('#solve-form .submit-btn');
    if (solveForm) {
      const formLink = '<%= form.link %>';
      const totalQuestions = Number('<%= form.questions.length %>');

      const draftKey = `form_draft_${formLink}`;

      const loadDraft = () => {
        try {
          const raw = localStorage.getItem(draftKey);
          if (!raw) return;
          const draft = JSON.parse(raw);
          if (!draft || typeof draft !== 'object') return;
          if (draft.formLink !== formLink) return;
          if (!draft.answers || typeof draft.answers !== 'object') return;

          for (let index = 0; index < totalQuestions; index++) {
            const key = `q${index}`;
            const value = draft.answers[key];
            if (!value) continue;
            const input = solveForm.querySelector(`input[name="${key}"][value="${CSS.escape(String(value))}"]`);
            if (input) input.checked = true;
          }
        } catch (e) {
        }
      };

      const saveDraft = () => {
        try {
          const answers = {};
          for (let index = 0; index < totalQuestions; index++) {
            const radio = solveForm.querySelector(`input[name="q${index}"]:checked`);
            if (radio) answers[`q${index}`] = radio.value;
          }
          localStorage.setItem(draftKey, JSON.stringify({
            formLink,
            savedAt: new Date().toISOString(),
            answers,
          }));
        } catch (e) {
        }
      };

      const clearDraft = () => {
        try {
          localStorage.removeItem(draftKey);
        } catch (e) {
        }
      };

      loadDraft();
      solveForm.addEventListener('change', saveDraft);
      window.addEventListener('beforeunload', saveDraft);

      const generateDeviceId = () => {
        if (crypto && typeof crypto.randomUUID === 'function') return crypto.randomUUID();
        return `device-${Date.now()}-${Math.random().toString(16).slice(2)}`;
      };

      solveForm.addEventListener('submit', async function (event) {
        event.preventDefault();

        if (submitBtn && submitBtn.disabled) {
          return;
        }

        const confirmation = await Swal.fire({
          title: 'تأكيد الإرسال',
          text: 'هل أنت متأكد من إرسال إجاباتك؟ لا يمكن التعديل بعد الإرسال.',
          icon: 'question',
          iconColor: '#ffcc00',
          showCancelButton: true,
          confirmButtonText: 'نعم، إرسال',
          cancelButtonText: 'إلغاء',
          confirmButtonColor: '#27ae60',
          cancelButtonColor: '#666',
          background: '#2a1b3c',
          color: '#fff',
          backdrop: 'rgba(0,0,0,0.8)'
        });

        if (!confirmation.isConfirmed) {
          return;
        }

        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span class="loading-dots" aria-hidden="true"><span></span><span></span><span></span></span><span style="margin-right:8px">جاري الإرسال...</span>';
        }

        const answers = {};
        for (let index = 0; index < totalQuestions; index++) {
          const radio = solveForm.querySelector(`input[name="q${index}"]:checked`);
          if (radio) {
            answers[`q${index}`] = radio.value;
          }
        }

        try {
          const response = await fetch(`/form/${formLink}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              deviceId: generateDeviceId(),
              ...answers
            })
          });

          const result = await response.json();

          if (response.ok && result.success) {
            clearDraft();
            await Swal.fire({
              text: result.message || 'تم إرسال إجاباتك بنجاح.',
              icon: 'success',
              iconColor: '#27ae60',
              background: '#2a1b3c',
              color: '#fff',
              backdrop: 'rgba(0,0,0,0.8)',
              showConfirmButton: false,
              timer: 1500
            });
            const redirectUrl = userGrade ? `/grades/${userGrade}` : '/';
            setTimeout(() => { window.location.href = redirectUrl; }, 1200);
          } else {
            await Swal.fire({
              text: result.message || 'حدث خطأ أثناء الإرسال',
              icon: 'error',
              iconColor: '#e74c3c',
              background: '#2a1b3c',
              color: '#fff',
              backdrop: 'rgba(0,0,0,0.8)',
              confirmButtonText: 'حسناً'
            });
          }
        } catch (error) {
          await Swal.fire({
            text: 'تعذر الاتصال بالخادم',
            icon: 'error',
            iconColor: '#e74c3c',
            background: '#2a1b3c',
            color: '#fff',
            backdrop: 'rgba(0,0,0,0.8)',
            confirmButtonText: 'حسناً'
          });
        }
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.innerHTML = 'إرسال الإجابات';
        }
      });
    }
  </script>
